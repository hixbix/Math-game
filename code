	    }
	  } 
	}	  
  }
  
  public static void level14() {
		System.out.println("level 4:");
		System.out.println("You currently have "+points+" points");
		System.out.print("your saving point code: ");
		System.out.print(code(14));
		System.out.println();
		System.out.println("Answer correct answer under 20 seconds gives you 25 points, under 28 seconds 18 points and after that 9 points. If you answer wrong you lose 20 points. ");
		int specialpass = points;
		points = 0;
		while(points<=450){
		  if(points == 0)points = specialpass;
		  System.out.println();
		  char ch2 = ' ';
		  while(ch2!='s') {
			System.out.print("to start press 's' and enter: ");
			ch2 = input.next().charAt(0);		  
		  }
		  if(ch2=='s'){
		    timesup(1);
		    System.out.println();
		    System.out.println("to pass this level you need more than 450 points.");
		    timesup(3);
		    System.out.println("Good luck!");
		    timesup(2);
		    System.out.println();
		    for(int i =0;i<10;i++){
		      int random3 = (int)(Math.random()*2001)-1000;
		      int random4 = (int)(Math.random()*2001)-1000;
		      if(random4<0) System.out.print(random3+" + "+"("+random4+")"+" = ");
		      else System.out.print(random3+" + "+random4+" = ");
		      setime();
		      int answer2 = input.nextInt();
		      int y = checktime();
		      if(y<20&&check(random3,random4,answer2,'+')){
		        System.out.println(" correct! - under 20s! +25 points");
		        points = points + 25;
		      }
		      else if(y<28&&check(random3,random4,answer2,'+')){
		        System.out.println("correct! - under 28s! +18 points");
		        points = points + 18;
		      } 
		      else if(check(random3,random4,answer2,'+')){
		        System.out.println("correct! +9 points");
		        points = points + 9;
		      } 
		      else{
		        System.out.println("Wrong answer! -20 points");
		        if(points >= 10)points = points - 20;
		      } 
		      System.out.println();
		    }
		    if(points<=450) {
		    	System.out.println("not enough points! try again.."); 
		    	System.out.println("You currently have "+points+" points");
		    }
		  } 
		}		  
  }
  
  public static void level21(){
