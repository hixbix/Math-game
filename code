	System.out.print(code(13));
	System.out.println();
	System.out.println("Answer correct answer under 15 seconds gives you 20 points, under 22 seconds 12 points and after that 6 points. If you answer wrong you lose 10 points. ");
	int specialpass = points;
	points = 0;
	while(points<=275){
	  if(points == 0)points = specialpass;
	  System.out.println();
	  char ch2 = ' ';
	  while(ch2!='s') {
		System.out.print("to start press 's' and enter: ");
		ch2 = input.next().charAt(0);		  
	  }
	  if(ch2=='s'){
	    timesup(1);
	    System.out.println();
	    System.out.println("to pass this level you need more than 275 points.");
	    timesup(3);
	    System.out.println("Good luck!");
	    timesup(2);
	    System.out.println();
	    for(int i =0;i<10;i++){
	      int random3 = (int)(Math.random()*1000)+1;
	      int random4 = (int)(Math.random()*1000)+1;
	      System.out.print(random3+" + "+random4+" = ");
	      setime();
	      int answer2 = input.nextInt();
	      int y = checktime();
	      if(y<15&&check(random3,random4,answer2,'+')){
	        System.out.println(" correct! - under 15s! +20 points");
	        points = points + 20;
	      }
	      else if(y<22&&check(random3,random4,answer2,'+')){
	        System.out.println("correct! - under 22s! +12 points");
	        points = points + 12;
	      } 
	      else if(check(random3,random4,answer2,'+')){
	        System.out.println("correct! +6 points");
	        points = points + 6;
	      } 
	      else{
	        System.out.println("Wrong answer! -10 points");
	        if(points >= 10)points = points - 10;
	      } 
	      System.out.println();
