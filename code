	      System.out.print(random3+" * "+random4+" = ");
	      setime();
	      double answer2 = input.nextDouble();
	      int y = checktime();
	      if(y<10&&check_d(random3,random4,answer2,'*')){
	        System.out.println(" correct! - under 10s! +20 points");
	        points = points + 20;
	      }
	      else if(y<18&&check_d(random3,random4,answer2,'*')){
	        System.out.println("correct! - under 18s! +12 points");
	        points = points + 12;
	      } 
	      else if(check_d(random3,random4,answer2,'*')){
	        System.out.println("correct! +6 points");
	        points = points + 6;
	      } 
	      else{
	        System.out.println("Wrong answer! -10 points");
	        if(points >= 10)points = points - 10;
	      } 
	      System.out.println();
	    }
	    if(points<=1250) {
	    	System.out.println("not enough points! try again.."); 
	    	System.out.println("You currently have "+points+" points");
	    }
	  } 
	}	  
