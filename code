  public static void startcode() {
     System.out.println();
     System.out.print("enter your code: ");
     String code = input.nextLine();
     code = input.nextLine();
     int cr = checkcode(code);  
     while(cr==0) {
       System.out.println("The code your entered is wrong! please check it and try again.");
       System.out.println("In case you wish to start a new game press 's'.");
       System.out.print("enter your code: ");
       code = input.nextLine();
