  public static void level31(){
	System.out.println();
	System.out.println("Multiplication:");
	System.out.println("level 1:");
	System.out.println("You currently have "+points+" points");
	System.out.print("your saving point code: ");
	System.out.print(code(31));
	System.out.println();
	System.out.println("Answer correct answer under 4 seconds gives you 15 points, under 7 seconds 10 points and after that 5 points. If you answer wrong you lose 5 points. ");
	int specialpass = points;
	points = 0;
	while(points<=1000){
	  if(points == 0)points = specialpass;
	  System.out.println();
	  char ch = ' ';
	  while(ch!='s') {
		System.out.print("to start press 's' and enter: ");
		 ch = input.next().charAt(0);		  
	  }
	  if(ch=='s'){
	    timesup(1);
	    System.out.println();
	    System.out.println("To pass this level you need more than 1000 points.");
	    timesup(3);
	    System.out.println("Good luck!");
	    timesup(2);
	    System.out.println();
	    for(int i =0;i<10;i++){
	      int random1 = (int)(Math.random()*10)+1;
	      int random2 = (int)(Math.random()*10)+1;
	      System.out.print(random1+" * "+random2+" = ");
	      setime();
	      int answer = input.nextInt();
