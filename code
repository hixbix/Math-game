	System.out.println();
	System.out.println("Answer correct answer under 10 seconds gives you 20 points, under 18 seconds 12 points and after that 6 points. If you answer wrong you lose 10 points. ");
	int specialpass = points;
	points = 0;
	while(points<=1250){
	  if(points == 0)points = specialpass;
	  System.out.println();
	  char ch2 = ' ';
	  while(ch2!='s') {
		System.out.print("to start press 's' and enter: ");
		ch2 = input.next().charAt(0);		  
	  }
	  if(ch2=='s'){
	    timesup(1);
