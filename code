  public static boolean check(int a, int b, int ans, char op){
    if(op=='+'){
      if(a+b==ans) return true;
      else return false;
    }
    else if(op=='-'){
      if(a-b==ans) return true;
      else return false;
    }
    else if(op=='*'){
      if(a*b==ans) return true;
      else return false;
    }
    else if(op=='/'){
      if(a/b==ans) return true;
      else return false;
    }
    else if(op=='^'){
      if(Math.pow(a, b)==ans) return true;
      else return false;
    }
    else if(op=='√'){
      if(Math.sqrt(a)==ans) return true;
      else return false;
    }
    return false;
  }

  public static boolean check_d(double a, double b, double ans, char op){
	  double h = 0;
    if(op=='*'){
    	if(((int)(a*b*10000))%10==9&&((int)(a*b*10000))%100/10==9) h=0.01;
      if((((double)((int)(a*b*100)))/100)+h==ans) return true;
      else return false;
    }
    else if(op=='/'){
    	if(((int)(a*b*10000))%10==9&&((int)(a*b*10000))%100/10==9) h=0.01;
      if((((double)((int)(a/b*100)))/100)+h==ans) return true;
      else return false;
    }
    return false;
  }

  public static boolean timesup(Integer end){
    Integer hh,mm,ss;
    Date dat=new Date();
    String str=dat.toString();
    hh=Integer.parseInt(str.substring(11,13));
    mm=Integer.parseInt(str.substring(14,16));
    ss=Integer.parseInt(str.substring(17,19));
    Integer s = ss + end;
    Integer m = mm;
    Integer h = hh;
    while(s>=60){
      if(s>=60){
        m++;
        s = s-60;
      }
      if(m>=60){
        h++;
        m = 0;
        s = s-60;
      }
    }
    while(s!=ss||m!=mm||h!=hh){
      Date date =new Date();
      str=date.toString();
      hh=Integer.parseInt(str.substring(11,13));
      mm=Integer.parseInt(str.substring(14,16));
      ss=Integer.parseInt(str.substring(17,19));
    }
    return true;
  }

  public static void setime(){
    Date date = new Date();
    String str=date.toString();
    sss=Integer.parseInt(str.substring(17,19));
    mmm=Integer.parseInt(str.substring(14,16));
    hhh=Integer.parseInt(str.substring(11,13));
  }

  public static int checktime(){
    Integer s,m,h;
    Date date = new Date();
    String str = date.toString();
    s = Integer.parseInt(str.substring(17,19));
    m = Integer.parseInt(str.substring(14,16));
    h = Integer.parseInt(str.substring(11,13));
    return (((hhh*60*60)+(mmm*60)+sss) - ((h*60*60)+(m*60)+s)) * -1;
  }

