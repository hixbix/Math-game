package Learn15;

import java.util.*;
class Main{
  static Scanner input = new Scanner(System.in);
  static int points = 0;
  static Integer sss,mmm,hhh;
  public static void main(String[] args){
    System.out.println("Welcome to the math game!");
    System.out.println("You currently have "+points+" points");
    System.out.println();
    System.out.println("1. press 's' to start a new game.");
    System.out.println("2. press 'l' to see all the levels.");
    System.out.println("3. press 'c' to enter your code of your save point.");
    System.out.print("enter here: ");
    char ch = input.next().charAt(0);
    if(ch=='s'){
    	fullgame();
    }
    else if(ch=='l'){
      levels();
      System.out.println();
      System.out.println("1. press 's' to start a new game.");
      System.out.println("2. press 'c' to enter your code of your save point.");
      System.out.print("enter here: ");
      char ch2 = input.next().charAt(0);
      if(ch2=='s') {
    	fullgame();
      }
      else if(ch2=='c') startcode();
    }
    if(ch=='c') startcode();
  }

  
  public static void level11(){
	System.out.println();
	System.out.println("Addition:");
	System.out.println("level 1:");
	System.out.println("Answer correct answer under 3 seconds gives you 15 points, under 6 seconds 10 points and after that 5 points. If you answer wrong you lose 5 points. ");
	while(points<=70){
	  System.out.println();
	  char ch = ' ';
	  while(ch!='s') {
		System.out.print("to start press 's' and enter: ");
		 ch = input.next().charAt(0);		  
	  }
	  if(ch=='s'){
	    timesup(1);
	    System.out.println();
	    System.out.println("To pass this level you need more than 70 points.");
	    timesup(3);
	    System.out.println("Good luck!");
	    timesup(2);
	    System.out.println();
	    for(int i =0;i<10;i++){
	      int random1 = (int)(Math.random()*10)+1;
	      int random2 = (int)(Math.random()*10)+1;
	      System.out.print(random1+" + "+random2+" = ");
	      setime();
	      int answer = input.nextInt();
	      int x = checktime();
	      if(x<3&&check(random1,random2,answer,'+')){
	        System.out.println(" correct! - under 3s! +15 points");
	        points = points + 15;
	      }
	      else if(x<6&&check(random1,random2,answer,'+')){
	        System.out.println("correct! - under 6s! +10 points");
	        points = points + 10;
	      } 
	      else if(check(random1,random2,answer,'+')){
	        System.out.println("correct! +5 points");
	        points = points + 5;
	      } 
	      else{
	        System.out.println("Wrong answer! -5 points");
	        if(points >= 5)points = points - 5;
	      } 
	      System.out.println();
	     }
	    if(points<=70) {
	    	System.out.println("not enough points! try again.."); 
	    	System.out.println("You currently have "+points+" points");
	    }
	    
	  }
	}	  
	  
  }
  
  public static void level12(){
	System.out.println("level 2:");
	System.out.println("You currently have "+points+" points");
	System.out.print("your saving point code: ");
	System.out.print(code(12));
	System.out.println();
	System.out.println("Answer correct answer under 5 seconds gives you 12 points, under 10 seconds 6 points and after that 3 points. If you answer wrong you lose 6 points. ");
	int specialpass = points;
	points = 0;
	while(points<=150){
	  if(points == 0)points = specialpass;
	  System.out.println();
	  char ch2 = ' ';
	  while(ch2!='s') {
		System.out.print("to start press 's' and enter: ");
		ch2 = input.next().charAt(0);		  
	  }
	  if(ch2=='s'){
	    timesup(1);
	    System.out.println();
	    System.out.println("to pass this level you need more than 150 points.");
	    timesup(3);
	    System.out.println("Good luck!");
	    timesup(2);
	    System.out.println();
	    for(int i =0;i<10;i++){
	      int random3 = (int)(Math.random()*100)+1;
	      int random4 = (int)(Math.random()*100)+1;
	      System.out.print(random3+" + "+random4+" = ");
	      setime();
	      int answer2 = input.nextInt();
	      int y = checktime();
	      if(y<5&&check(random3,random4,answer2,'+')){
	        System.out.println(" correct! - under 5s! +12 points");
	        points = points + 12;
	      }
	      else if(y<10&&check(random3,random4,answer2,'+')){
	        System.out.println("correct! - under 10s! +6 points");
	        points = points + 6;
	      } 
	      else if(check(random3,random4,answer2,'+')){
	        System.out.println("correct! +3 points");
	        points = points + 3;
	      } 
	      else{
	        System.out.println("Wrong answer! -6 points");
	        if(points >= 6)points = points - 6;
	      } 
	      System.out.println();
	    }
	    if(points<=150){
	    	System.out.println("not enough points! try again.."); 
	    	System.out.println("You currently have "+points+" points");
	    }
	  }    
	}	  
  }
  
  public static void level13(){
	System.out.println("level 3:");
	System.out.println("You currently have "+points+" points");
