  public static String code(int lvl) {
	  String str = "MLOPJNK";
	  String nstr = "";
	  if(lvl == 12) for(int i=0;i<str.length();i++) nstr += (char)((int)str.charAt(i)+3);
	  else if(lvl == 13) for(int i=0;i<str.length();i++) nstr += (char)((int)str.charAt(i)+5);
	  else if(lvl == 14) for(int i=0;i<str.length();i++) nstr += (char)((int)str.charAt(i)+1);
	  else if(lvl == 21) for(int i=0;i<str.length();i++) nstr += (char)((int)str.charAt(i)+4);
	  else if(lvl == 22) for(int i=0;i<str.length();i++) nstr += (char)((int)str.charAt(i)-1);
	  else if(lvl == 23) for(int i=0;i<str.length();i++) nstr += (char)((int)str.charAt(i)-3);
	  else if(lvl == 24) for(int i=0;i<str.length();i++) nstr += (char)((int)str.charAt(i)-2);
	  else if(lvl == 31) for(int i=0;i<str.length();i++) nstr += (char)((int)str.charAt(i)-4);
	  else if(lvl == 32) for(int i=0;i<str.length();i++) nstr += (char)((int)str.charAt(i)-5);
	  else if(lvl == 33) for(int i=0;i<str.length();i++) nstr += (char)((int)str.charAt(i)+7);
	  else if(lvl == 41) for(int i=0;i<str.length();i++) nstr += (char)((int)str.charAt(i)+8);
	  else if(lvl == 42) for(int i=0;i<str.length();i++) nstr += (char)((int)str.charAt(i)-8);
	  else if(lvl == 43) for(int i=0;i<str.length();i++) nstr += (char)((int)str.charAt(i)-7);
	  else if(lvl == 51) for(int i=0;i<str.length();i++) nstr += (char)((int)str.charAt(i)+10);
	  else if(lvl == 52) for(int i=0;i<str.length();i++) nstr += (char)((int)str.charAt(i)+9);
	  else if(lvl == 61) for(int i=0;i<str.length();i++) nstr += (char)((int)str.charAt(i)-9);
	  return nstr;
  }
  
